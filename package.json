{
  "name": "ai-contract-drift-monitor",
  "version": "0.1.0",
  "private": false,
  "description": "Boilerplate for API contract testing with AI-powered drift detection, Teams alerts, and Prometheus metrics",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "test:contracts": "playwright test --reporter=list,junit --output=./test-results --project=chromium",
    "drift": "tsx src/application/use-cases/drift-check.ts",
    "metrics": "METRICS_PORT=9091 tsx src/infrastructure/monitoring/metrics/server.ts",
    "start": "docker-compose up -d && echo 'âœ… Services started! Access Grafana at http://localhost:3001 (admin/admin)'"
  },
  "keywords": [
    "playwright",
    "zod",
    "prometheus",
    "teams",
    "drift",
    "api",
    "contracts"
  ],
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.47.2",
    "@types/nodemailer": "^7.0.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "nodemailer": "^7.0.9",
    "prom-client": "^15.1.3",
    "tsx": "^4.20.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
